---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/UI/header.astro";
import Footer from "../../components/UI/footer.astro";
import Showcase from "../../components/work/showcase.astro";
import OverskriftCase from "../../components/blocks/overskrift_case.astro";
import Underoverskrift from "../../components/blocks/underoverskrift.astro";
import Imgtext from "../../components/blocks/imgtext.astro";
import Display from "../../components/blocks/display.astro";
import Brodtekst from "../../components/blocks/brodtekst.astro";


import { casearray } from "../../scripts/casearray";

export async function getStaticPaths() {
  return casearray.map((c) => ({
    params: { slug: c.slug },
    props: { caseData: c },
  }));
}

const { caseData } = Astro.props;
const { titel, undertitel, billede, gif, text } = caseData;
---

<Layout>
  <Header titel={titel} />
  <div class="grid md:gap-25 gap-18">
    <Showcase src={gif} alt={titel} />
    <div class="grid gap-10">
      <div>
        <OverskriftCase titel={titel}/> 
        <Underoverskrift>
          <h3 class="text-lg">{`> ${undertitel}`}</h3>
        </Underoverskrift>
      </div>
      <Brodtekst>{text.map((paragraph) => <p>{paragraph}</p>)}</Brodtekst>
    </div>
    <Display />
    <Footer />
  </div>
  
</Layout>
